<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.OpeningScreenFragment"
    android:background="@drawable/background_landscape"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/viga"
        android:gravity="center"
        android:text="@string/travel_journal_tv"
        android:textColor="@color/black"
        android:textSize="45dp" />


    <TextView
        android:id="@+id/sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:text="@string/sentence_opening"
        android:textColor="#0B570E"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/get_started_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/puritan_bold_italic"
        android:text="@string/get_started_btn"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    </LinearLayout>